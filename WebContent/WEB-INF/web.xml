<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>SummaryTask4</display-name>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>ua.nure.yosin.SummaryTask4.web.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.nure.yosin.SummaryTask4.web.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/WEB-INF/jsp/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>IndexPageFilter</filter-name>
    <filter-class>ua.nure.yosin.SummaryTask4.web.filter.IndexPageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>IndexPageFilter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LanguageFilter</filter-name>
    <filter-class>ua.nure.yosin.SummaryTask4.web.filter.LanguageFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LanguageFilter</filter-name>
    <url-pattern>/changeLocale</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CommandAccessFilter</filter-name>
    <filter-class>ua.nure.yosin.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
    <init-param>
      <param-name>admin</param-name>
      <param-value>admin</param-value>
    </init-param>
    <init-param>
      <param-name>manager</param-name>
      <param-value>manager</param-value>
    </init-param>
    <init-param>
      <param-name>client</param-name>
      <param-value>client</param-value>
    </init-param>
    <init-param>
      <param-name>common</param-name>
      <param-value>reservation process settings bookingHistory responses requests finance</param-value>
    </init-param>
    <init-param>
      <param-name>out-of-control</param-name>
      <param-value>index details activityDetails updatestatus rooms activities logout signup  noCommand login</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CommandAccessFilter</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <listener>
    <listener-class>ua.nure.yosin.SummaryTask4.web.listener.InitializeLanguage</listener-class>
  </listener>
  <listener>
    <listener-class>ua.nure.yosin.SummaryTask4.web.listener.ContextListener</listener-class>
  </listener>
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/hotel</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Hotel mail</description>
    <res-ref-name>mail/Session</res-ref-name>
    <res-type>javax.mail.Session</res-type>
    <res-auth>Container</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/jsp/error_page.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error_page.jsp</location>
  </error-page>
</web-app>